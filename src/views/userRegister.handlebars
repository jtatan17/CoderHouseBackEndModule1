<main class="d-flex flex-column align-items-center w-100 flex-grow-1">
  <h1 class="bg-success-subtle p-2 text-center text-success w-100">REGISTER FORM</h1>
  <form
    class="m-3 d-flex flex-column justify-content-evently flex-wrap align-items-center"
    style="width: 380px;"
  >
    <input
      class="m-2 p-2 text-center w-100"
      type="text"
      name="name"
      id="firstName"
      placeholder="FIRST NAME"
    />
    <input
      class="m-2 p-2 text-center w-100"
      type="text"
      name="lastName"
      id="lastName"
      placeholder="LAST NAME"
    />
    <input
      class="m-2 p-2 text-center w-100"
      type="text"
      name="avatar"
      id="avatar"
      placeholder="AVATAR URL"
    />
    <input
      class="m-2 p-2 text-center w-100"
      type="number"
      name="age"
      id="age"
      placeholder="Age"
    />
    <input
      class="m-2 p-2 text-center w-100"
      type="email"
      name="email"
      id="email"
      placeholder="EMAIL"
    />
    <input
      class="m-2 p-2 text-center w-100"
      type="password"
      name="password"
      id="password"
      placeholder="PASSWORD"
    />
    <input
      class="m-2 p-2 text-center btn btn-success w-100"
      type="button"
      id="register"
      value="REGISTER!"
    />
  </form>
</main>
<script src="./scripts/realRegister.js"></script>