<section class="container mt-5">
  {{#if product}}
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm">
          {{#if product.image}}
            <img
              src="{{product.image}}"
              class="card-img-top p-3"
              alt="{{product.title}}"
              style="height: 300px; object-fit: contain;"
              onerror="this.src='https://cdn-icons-png.flaticon.com/512/9402/9402212.png'"
            />
          {{else}}
            <img
              src="https://cdn-icons-png.flaticon.com/512/9402/9402212.png"
              class="card-img-top p-3"
              alt="{{product.title}}"
              style="height: 300px; object-fit: contain;"
            />
          {{/if}}

          <div class="card-body text-center">
            <h1 class="h3 card-title mb-3">{{product.title}}</h1>

            <div class="d-flex justify-content-center gap-4 mb-4">
              <div class="text-success">
                <span class="fs-4 fw-bold">${{product.price}}</span>
                <div class="text-muted small">USD</div>
              </div>

              <div>
                <span class="fs-4 fw-bold">{{product.stock}}</span>
                <div class="text-muted small">Units Available</div>
              </div>
            </div>

            <div class="d-grid gap-2">
              <button
                class="btn btn-primary add-to-cart"
                data-product-id="{{this._id}}"
              >
                <i class="bi bi-cart-plus"></i>
                Add to Cart
              </button>
              <a href="/" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back to Products
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{else}}
    <div class="alert alert-danger text-center">
      <h3>Product Not Found!</h3>
      <a href="/" class="btn btn-outline-danger mt-2">Browse Products</a>
    </div>
  {{/if}}
</section>